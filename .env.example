# =======================================
# CONFIGURAÇÃO DO SISTEMA DE LICITAÇÕES
# Copie este arquivo para .env e configure
# =======================================

# ===== BANCO DE DADOS =====
DB_HOST=localhost
DB_PORT=3306
DB_NAME=sistema_licitacao
DB_USER=root
DB_PASS=

# ===== CONFIGURAÇÕES DO SISTEMA =====
SITE_NAME=Sistema de Licitações CGLIC
SITE_URL=http://localhost/sistema_licitacao/
DEBUG_MODE=false
TIMEZONE=America/Sao_Paulo

# ===== SEGURANÇA =====
# Tempo de vida da sessão em segundos (7200 = 2 horas)
SESSION_LIFETIME=7200

# Token CSRF em segundos (3600 = 1 hora)
CSRF_TOKEN_LIFETIME=3600

# Máximo de tentativas de login
MAX_LOGIN_ATTEMPTS=5

# Tempo de bloqueio após tentativas (900 = 15 minutos)
LOGIN_BLOCK_TIME=900

# ===== UPLOADS =====
# Tamanho máximo de upload em bytes (5242880 = 5MB)
MAX_UPLOAD_SIZE=5242880

# Diretório de uploads (relativo à raiz)
UPLOAD_DIR=storage/uploads/

# ===== CACHE =====
# Tempo padrão de cache em segundos
CACHE_DEFAULT_TIME=3600

# ===== BACKUP =====
# Backup automático ativo (true/false)
BACKUP_AUTO_ENABLED=true

# Dias de retenção dos backups
BACKUP_RETENTION_DAYS=30

# Horário de execução dos backups (formato HH:MM)
BACKUP_TIME=02:00

# Tamanho máximo dos backups em MB
BACKUP_MAX_SIZE_MB=500

# ===== LOGS =====
# Nível de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Rotação de logs (dias para manter)
LOG_RETENTION_DAYS=90

# ===== PERFORMANCE =====
# Cache de consultas ativo
QUERY_CACHE_ENABLED=true

# Tempo de cache das estatísticas (segundos)
STATS_CACHE_TIME=300

# ===== DESENVOLVIMENTO =====
# Mostrar toolbar de debug (apenas para desenvolvimento)
DEBUG_TOOLBAR=false

# Profiling de consultas SQL
SQL_PROFILING=false

# ===== RECURSOS OPCIONAIS =====
# Ativar sistema de notificações
NOTIFICATIONS_ENABLED=true

# Ativar auditoria completa
AUDIT_ENABLED=true

# Para produção, defina DEBUG_MODE=false e configure senhas seguras
# Exemplo para produção:
# DB_PASS=sua_senha_super_segura_aqui
# DEBUG_MODE=false